<UserControl x:Class="Chess.GameStartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Margin="10 10 10 10" FontSize="20" FontWeight="Black">Welcome to Chess!</TextBlock>
                <Button Margin="10 10 10 10" FontSize="12" FontWeight="Bold" Background="Green" Command="{Binding StartGameCommand}">Start</Button>
            </StackPanel>
        </WrapPanel>
    </Grid>
</UserControl>
